# Database Configuration (overrides spring.datasource in application-dev.yml/prod.yml)
# For dev/prod: PostgreSQL (e.g., Supabase or local)
DATABASE_URL=jdbc:postgresql://localhost:5432/auth_db
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=root

# For test profile: H2 in-memory (set in application-test.yml, no need to override unless custom)

# OAuth2 Google Configuration (overrides spring.security.oauth2.client.registration.google in application-dev.yml)
GOOGLE_CLIENT_ID=google-client-id
GOOGLE_CLIENT_SECRET=google-client-secret

# Redis Configuration (overrides spring.data.redis in application-dev.yml/prod.yml)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_USERNAME=
REDIS_PASSWORD=

# JWT Configuration (overrides yousuf.app in application-dev.yml)
JWT_SECRET=jwt-secret-key
JWT_EXPIRATION_MS=3600000

# CORS Configuration (overrides yousuf.app.cors.allowed-origins in application-dev.yml)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# OAuth2 Authorized Redirect URIs (overrides yousuf.app.oauth2.authorized-redirect-uris in application-dev.yml)
OAUTH2_AUTHORIZED_REDIRECT_URIS=http://localhost:8080/oauth2/redirect,http://localhost:3000/oauth2/redirect

# Additional overrides if needed for prod profile (e.g., secure cookies, different origins)
# For prod: Set secure flags, adjust CORS, etc., via application-prod.yml or here if overriding
